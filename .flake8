[flake8]
# Maximum line length
max-line-length = 100

# Exclude directories
exclude =
    .git,
    __pycache__,
    venv,
    .venv,
    env,
    .env,
    experiments,
    mlruns,
    data,
    logs,
    build,
    dist,
    *.egg-info,
    .tox,
    .pytest_cache,
    .mypy_cache,
    .ipynb_checkpoints,
    cloud/terraform/.terraform,
    local-setup

# Ignore specific error codes (customize as needed)
# E203: whitespace before ':' (conflicts with black)
# W503: line break before binary operator (outdated convention)
ignore = E203, W503

# Maximum complexity
max-complexity = 10
